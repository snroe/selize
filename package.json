{
  "name": "@selize/utils",
  "version": "0.1.16",
  "author": "Snroe",
  "license": "MIT",
  "description": "This is a collection of utilities for selize",
  "keywords": [
    "Snroe",
    "selize",
    "utils"
  ],
  "homepage": "https://utils.selize.snroe.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/snroe/selize-utils.git"
  },
  "bugs": "https://github.com/snroe/selize-utils/issues",
  "main": "./lib/index.js",
  "type": "module",
  "types": "./lib/index.d.ts",
  "scripts": {
    "build": "rimraf lib && bun run check && bun run -c=bunfig.toml build.ts && bun run build:type",
    "build:type": "tsc --emitDeclarationOnly --outDir lib",
    "check": "tsc --noEmit",
    "clean": "rimraf lib node_modules/.tmp",
    "test": "bun run check && bun test --dir __tests__",
    "docs:html": "bun run -c=bunfig.toml docs.ts",
    "docs:md": "typedoc --includeVersion --excludePrivate false --githubPages --gitRevision main --plugin typedoc-plugin-markdown --out docs src",
    "release": "standard-version --commit-message",
    "publish": "npm publish --access public"
  },
  "engines": {
    "node": ">=20.0.0",
    "bun": ">=1.0.0"
  },
  "dependencies": {
    "fs-extra": "^11.3.0",
    "rimraf": "^6.0.1"
  },
  "devDependencies": {
    "@types/bun": "^1.2.18",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^24.0.13",
    "prettier": "^3.6.2",
    "standard-version": "^9.5.0",
    "typedoc": "^0.28.7",
    "typedoc-plugin-markdown": "^4.7.0"
  },
  "peerDependencies": {
    "typescript": "^5.8.3"
  }
}
